<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/8.0.91" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox fx:id="container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <MenuBar fx:id="menuBar">
                    <menus>
                        <Menu text="File">
                            <items>
                                <MenuItem fx:id="open" text="Open" />
                                <MenuItem text="Save" />
                                <MenuItem text="Save As" />
                                <SeparatorMenuItem />
                                <MenuItem text="Exit" />
                            </items>
                        </Menu>
                        <Menu text="Edit">
                            <items>
                                <MenuItem text="Copy" />
                                <MenuItem text="Cut" />
                                <MenuItem text="Paste" />
                            </items>
                        </Menu>
                        <Menu text="Help">
                            <items>
                                <MenuItem disable="true" text="Search" />
                                <MenuItem text="Online Manual" visible="false" />
                                <SeparatorMenuItem />
                                <MenuItem text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
